{
	"compilerOptions": {
		"target": "ES2017",
		"module": "NodeNext",
		"esModuleInterop": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./bin",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}

		/* Bundler mode */
	},
	"include": ["./src", "**/*.ts", "**/*.d.ts"],
	"exclude": ["node_modules"]
}

